<svg xmlns="http://www.w3.org/2000/svg" width="800" height="500" viewBox="0 0 800 500">
  <!-- Background -->
  <rect width="800" height="500" fill="#1e1e1e"/>
  
  <!-- Starry Background -->
  <g fill="white">
    <circle cx="50" cy="50" r="1" />
    <circle cx="150" cy="80" r="1.2" />
    <circle cx="250" cy="40" r="1" />
    <circle cx="350" cy="90" r="1.3" />
    <circle cx="450" cy="60" r="1.1" />
    <circle cx="550" cy="30" r="1" />
    <circle cx="650" cy="70" r="1.2" />
    <circle cx="750" cy="50" r="1" />
    <circle cx="100" cy="150" r="1.3" />
    <circle cx="200" cy="120" r="1" />
    <circle cx="300" cy="180" r="1.2" />
    <circle cx="400" cy="140" r="1" />
    <circle cx="500" cy="190" r="1.3" />
    <circle cx="600" cy="130" r="1.1" />
    <circle cx="700" cy="160" r="1" />
    <circle cx="50" cy="250" r="1.2" />
    <circle cx="150" cy="220" r="1" />
    <circle cx="250" cy="270" r="1.3" />
    <circle cx="350" cy="240" r="1.1" />
    <circle cx="450" cy="280" r="1" />
    <circle cx="550" cy="230" r="1.2" />
    <circle cx="650" cy="290" r="1" />
    <circle cx="750" cy="210" r="1.3" />
    <circle cx="100" cy="350" r="1" />
    <circle cx="200" cy="320" r="1.2" />
    <circle cx="300" cy="370" r="1" />
    <circle cx="400" cy="330" r="1.3" />
    <circle cx="500" cy="380" r="1.1" />
    <circle cx="600" cy="340" r="1" />
    <circle cx="700" cy="390" r="1.2" />
    <circle cx="50" cy="450" r="1" />
    <circle cx="150" cy="430" r="1.3" />
    <circle cx="250" cy="470" r="1.1" />
    <circle cx="350" cy="420" r="1" />
    <circle cx="450" cy="480" r="1.2" />
    <circle cx="550" cy="440" r="1" />
    <circle cx="650" cy="460" r="1.3" />
    <circle cx="750" cy="490" r="1.1" />
  </g>
  
  <!-- Spiral Galaxy -->
  <g transform="translate(400, 250) scale(0.8)">
    <g transform="rotate(45)">
      <path d="M0,0 Q100,100 200,0 T400,0" stroke="url(#galaxyGradient1)" stroke-width="30" fill="none" opacity="0.5"/>
      <path d="M0,0 Q100,-100 200,0 T400,0" stroke="url(#galaxyGradient2)" stroke-width="30" fill="none" opacity="0.5"/>
      <path d="M0,0 Q-100,100 -200,0 T-400,0" stroke="url(#galaxyGradient3)" stroke-width="30" fill="none" opacity="0.5"/>
      <path d="M0,0 Q-100,-100 -200,0 T-400,0" stroke="url(#galaxyGradient4)" stroke-width="30" fill="none" opacity="0.5"/>
    </g>
  </g>
  
  <!-- Center Glow -->
  <circle cx="400" cy="250" r="50" fill="url(#centerGlow)" opacity="0.8"/>
  
  <!-- Text -->
  <text x="400" y="430" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="white" text-anchor="middle">Cosmic Blog Post</text>
  
  <!-- Gradients -->
  <defs>
    <linearGradient id="galaxyGradient1" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#8000ff" />
      <stop offset="100%" stop-color="#ff0000" />
    </linearGradient>
    <linearGradient id="galaxyGradient2" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#00ffff" />
      <stop offset="100%" stop-color="#ffff00" />
    </linearGradient>
    <linearGradient id="galaxyGradient3" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#ff8000" />
      <stop offset="100%" stop-color="#00ff00" />
    </linearGradient>
    <linearGradient id="galaxyGradient4" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" stop-color="#0000ff" />
      <stop offset="100%" stop-color="#ff00ff" />
    </linearGradient>
    <radialGradient id="centerGlow" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
      <stop offset="0%" stop-color="white" stop-opacity="1"/>
      <stop offset="100%" stop-color="white" stop-opacity="0"/>
    </radialGradient>
  </defs>
</svg>
